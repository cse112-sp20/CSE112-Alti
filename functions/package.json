{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "./slackFunctionality/index.js",
  "scripts": {
    "test": "bash ./scripts/RunTest.sh",
    "setup": "bash ./scripts/Setup.sh",
    "local_action_build": "bash ./scripts/GitHubAction.sh build",
    "local_action_deploy": "bash ./scripts/.sh deploy",
    "coverage": "bash ./scripts/Coverage.sh",
    "lint": "eslint -c ../dot_files/.eslintrc.json .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@google-cloud/firestore": "3.7.5",
    "@google-cloud/pubsub": "^1.7.3",
    "@slack/bolt": "^2.1.1",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.2",
    "node-pre-gyp": "^0.14.0",
    "request": "^2.88.2",
    "shuffle-array": "^1.0.1"
  },
  "devDependencies": {
    "body-parser": "^1.15.2",
    "chai": "^4.2.0",
    "codecov": "^3.7.0",
    "coveralls": "^3.1.0",
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.2.0",
    "husky": "^4.2.5",
    "istanbul": "^0.4.5",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "standard": "^8.5.0"
  },
  "standard": {
    "globals": [
      "after",
      "afterEach",
      "before",
      "beforeEach",
      "describe",
      "it"
    ]
  },
  "private": true
}
